.contents
  = render 'layouts/header'
  .main
    .right
      .right__movin
        .right__movin__onoff-btn
          - if current_user.is_moving
            %input{type: 'button', value: '移動終了', data: {btn: 'end'}, class: "start_end_btn btn"}
          - else
            %input{type: 'button', value: '移動開始', data: {btn: 'start'}, class: "start_end_btn btn"}
      .right__user-status
        =link_to 'ユーザ情報変更', edit_user_registration_path(current_user), class: "header__right__left-btn_edit"
    .left
      .left__avatar-status
        =link_to 'アバターをつくる', new_avatar_path
       
        #gmap{style: "width:400px; height:360px; position:relative;"}       
          %button#gmap__panTo--user
            ユーザーの現在地
          %button#gmap__panTo--avatar
            アバターの現在地
          %input#auto-refresh{type: 'checkbox'}
            地図を自動更新する
          #gmap__map{style: "width:400px; height:300px"}

        #panorama
          #panorama__option
            %a{href: "javascript:void(0)", id: 'panorama__option--display' }
              <アバターくん>の視界を表示
            %a{href: "javascript:void(0)", id: 'panorama__option--refresh' }
            
          #panorama__view{style: "width:400px; height:200px"}

        #test_curr_timetable
        #test_curr_station
        #test_curr_location_lat
        #test_curr_location_long

        #info
          情報:
          = @curr